---
import BaseHead from '../components/head/BaseHead.astro'
import { SITE_DESCRIPTION, SITE_MAIN_TITLE } from '../consts'
---

<html lang="en">
	<head>
		<BaseHead title={'404 | ' + SITE_MAIN_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="flex h-screen w-screen flex-col justify-center bg-primary text-center">
			<h1 class="text-accent text-9xl leading-normal text-white md:text-[16rem]">404</h1>
			<a href="/" class="text-accent text-xl uppercase text-white underline md:text-3xl"
				>No need to worry, get home here.</a
			>
		</div>
	</body>
</html>
