<form
	id="form"
	class="relative flex w-full flex-col gap-9 md:w-1/2"
	method="POST"
	data-netlify-recaptcha="true"
	data-netlify="true"
>
	<label class="text-3xl">
		Name
		<input
			name="name"
			autocomplete="false"
			required
			type="text"
			class="w-full border-2 border-black px-3 py-2 text-lg focus:border-primary focus:bg-primary/20 focus-visible:outline-none"
		/>
	</label>
	<label class="text-3xl">
		Email
		<input
			name="email"
			autocomplete="true"
			required
			type="email"
			class="w-full border-2 border-black px-3 py-2 text-lg focus:border-primary focus:bg-primary/20 focus-visible:outline-none"
		/>
	</label>
	<label class="text-3xl">
		Message
		<textarea
			name="message"
			required
			class="box-border min-h-44 w-full border-2 border-black px-3 py-2 text-lg focus:border-primary focus:bg-primary/20 focus-visible:outline-none"
		></textarea>
	</label>
	<button
		type="submit"
		class="text-accent bg-primary px-5 py-4 text-center text-3xl font-bold text-white selection:text-white md:text-4xl"
		>Submit form</button
	>
	<div id="successMessage" class="absolute left-0 top-0 hidden h-full w-full">
		<div
			class="flex h-full w-full flex-col items-center justify-center gap-9 border-2 border-black bg-white text-center"
		>
			<p class="text-accent w-2/3 text-balance text-3xl text-primary">
				Thank you very much for getting in touch with me!
			</p>
			<p class="w-2/3 text-balance">
				I’ll try to get back to you within 72 hours. You’ll receive an email from <a
					href="mailto:contact@pickwicksoft.org"
					class="text-primary">contact@pickwicksoft.org</a
				>
			</p>
		</div>
	</div>
</form>
<script>
	document.getElementById('form').addEventListener('submit', function (event) {
		event.preventDefault()
		const successMessage = document.getElementById('successMessage')
		successMessage.classList.remove('hidden')
	})
</script>
