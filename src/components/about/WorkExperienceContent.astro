---
import type { CollectionEntry } from 'astro:content'
interface Props {
	work: CollectionEntry<'work'> | CollectionEntry<'berufserfahrung'>
}
const { work } = Astro.props
const { Content } = await work.render()
---

<Content />
<style is:global>
	.work > ul {
		@apply list-inside list-[square] marker:text-primary;
	}

	.work > p {
		@apply mb-2 text-justify;
	}

	.work > p > br {
		content: '';
		@apply mb-1 block;
	}
</style>
