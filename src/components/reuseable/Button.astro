---
const { href, title, action, class: className } = Astro.props
const style =
	action === 'primary'
		? 'bg-primary border-primary hover:text-primary'
		: 'bg-black border-black hover:text-black'
---

<div class="relative flex">
	<a
		href={href}
		class:list={[
			'text-accent border-2 px-5 py-4 text-3xl font-bold text-white transition-all duration-200 ease-in-out selection:text-white hover:bg-white md:text-4xl',
			style,
			className
		]}>{title}</a
	>
</div>
