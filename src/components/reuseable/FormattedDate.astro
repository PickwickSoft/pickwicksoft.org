---
interface Props {
	date: Date
	hideDay?: boolean
}

const { date, hideDay } = Astro.props
const dayConfig = hideDay
	? { year: 'numeric', month: 'short' }
	: { year: 'numeric', month: 'short', day: 'numeric' }
---

<time datetime={date.toISOString()}>
	{date.toLocaleDateString('de-DE', dayConfig as Intl.DateTimeFormatOptions)}
</time>
