---
const { heading } = Astro.props
---

<li class="grid gap-3">
	<a href={'#' + heading.slug} class="pl-2 leading-6">
		{heading.text}
	</a>
	{
		heading.subheadings?.length > 0 && (
			<ul class="grid gap-3 pl-8">
				{heading.subheadings.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>
<style>
	.active {
		@apply text-primary;
	}
</style>
